<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentLoginActivity"
    android:background="@color/grey_700">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Login"
                    android:textSize="20dp"
                    android:layout_margin="25dp"
                    android:textColor="@color/white"
                    />


                <EditText
                    android:id="@+id/student_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:textAlignment="center"
                    android:hint="Juan Dela Cruz"
                    android:textColor="@color/white"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/grey_200"
                    android:background="@drawable/main_card"/>

                <EditText
                    android:id="@+id/student_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:textAlignment="center"
                    android:layout_marginVertical="5dp"
                    android:hint="12345678"
                    android:textColorHint="@color/grey_200"
                    android:background="@drawable/main_card"
                    android:inputType="textPassword" />


                <Button
                    android:id="@+id/studentLogin"
                    android:onClick="switchToStudentDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Login" />

                <Button
                    android:id="@+id/backToHomepage"
                    android:onClick="switchToStudentDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Go Back" />



            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>